// image container
.img-featured-container
  overflow: hidden
  position: relative
  img
    width: 100%
    display: block
  .img-backdrop
    background: linear-gradient(135deg, rgba(38, 163, 255, 0.85), rgba(83, 201, 179, 0.85))
    margin: 0
    padding: 0
    width: 100%
    height: 100%
    position: absolute
    z-index: 1
    opacity: 0
    transition: all 0.3s ease
  .description-container
    color: #fff
    font-size: 16px
    line-height: 1.2
    padding: 0 30px
    text-align: center
    line-height: 20px
    width: 100%
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    transform-style: preserve-3d
    z-index: 2
    opacity: 0
    transition: all .2s ease
    p
      font-weight: 300
      margin-bottom: 0
    .caption
      display: none
      margin-bottom: 10px
    .likes,
    .comments
      margin: 0 5px
  &:hover img
    // transform: scale(1.2);
    filter: grayscale(0)
  &:hover .img-backdrop,
  &:hover .description-container
    opacity: 1
