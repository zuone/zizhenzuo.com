/* Instagram */
#instafeed-gallery-feed
  margin: 0 auto
  .grid-sizer,
  .grid-item
    width: 33%
    padding: 30px
  &:after
    content: ''
    display: block
    clear: both
  img
    @extend $Transition-Normal
    width: 100%
    height: auto
    &:hover
      opacity: .9
      box-shadow: 0px 10px 60px rgba(0, 0, 0, 0.1), 0px 10px 20px rgba(0, 0, 0, 0.1);

@media screen and (max-width: 1120px)
  #instafeed-gallery-feed .grid-sizer,
  #instafeed-gallery-feed .grid-item
    width: 50%
@media screen and (max-width: 750px)
  #instafeed-gallery-feed .grid-sizer,
  #instafeed-gallery-feed .grid-item
    width: 100%


/* Dribbble */
#dribbble-shots
  display: grid
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  grid-template-rows: auto
  grid-gap: 60px
  a
    border-radius: 2px
    &:hover img
      opacity: .9
      box-shadow: 0px 10px 60px rgba(0, 0, 0, 0.1), 0px 10px 20px rgba(0, 0, 0, 0.1);
    img
      opacity: 1
      transition: all .3s
      border-radius: 2px
      width: 100%

@media only screen and (max-width: 750px)
  #dribbble-shots
    grid-template-columns: 1fr
  #dribbble-shots a img
    width: 100%

