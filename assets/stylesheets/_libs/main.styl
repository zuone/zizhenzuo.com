body,
html
  background: #161616
  color: $gray-dark
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: antialiased
  font-family: $family-main

// Nav
.top_nav
  @extend $X-Center
  position: fixed
  width: calc(100% - 128px)
  padding: 48px 0
  z-index: 10
  top: 0
  display: flex
  align-items: center
  &.nav-up
    top: -120px;

  .nav_link
    font-size: $h4
    color: $gray
    font-family: AcuminR
    line-height: 30px
    z-index: 2
    margin-right: 36px
    position relative
    @extend $Transition-Normal
    &:hover
      color: $gray-lightest
    &.active
      color: $gray-lightest
      font-family: AcuminBd

  .logo_z
    display: inline-block
    position: absolute
    right: 0
    width: 40px
    height: 40px
    @extend $Transition-Normal
    z-index: 10
    cursor pointer
    i
      @extend $XY-Center
      position: absolute
      display: block
      background-color: $gray-lightest
      background-image: none
      width: 22px
      height: 26px
      background-size: 20px 20px
      -webkit-mask-image: url("../images/logo/z.svg")
      mask-image: url("../images/logo/z.svg")
      @extend $Transition-Normal
      &:hover
        opacity: .8

// Mobie
@media only screen and (max-width: 1140px)
  .top_nav
    width: calc(100% - 100px)
    padding: 48px 0
@media only screen and (max-width: 750px)
  .top_nav
    width: calc(100% - 60px)

.section_full
