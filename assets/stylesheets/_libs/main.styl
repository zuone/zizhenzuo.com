.view_more
  @extend $X-Center
  padding-top: 16px
  padding-bottom: 2px
  position: relative
  display: inline-block
  margin-top: 60px
  font-family: AcuminBd
  font-size: 20px
  margin-bottom: 20px
  color: $gray-dark
  &.link
    margin-top: 10px
    margin-bottom: 0
    transform: translateX(0)
    left: 0
    span
      font-size: 22px
      color: #fff
    &:before,
    &:after
      content: ""
      display: block
      width: 100%
      height: 3px
      background-color: #e7e7e7
      position: absolute
      top: 60px
      transition: all 0.3s
    &:after
      background: #b6b6b6
      transform: scale3d(0, 1, 1)
      transform-origin: 0% 50%
      transition: transform 0.3s
    &:hover:after
      transform: scale3d(1, 1, 1)
  &:before,
  &:after
    content: ""
    display: block
    width: 100%
    height: 3px
    background-color: #dfdfdf
    position: absolute
    top: 44px
    transition: all 0.3s
  &:after
    background: $gray
    transform: scale3d(0, 1, 1)
    transform-origin: 0% 50%
    transition: transform 0.3s
  &:hover:after
    transform: scale3d(1, 1, 1)

.develop
