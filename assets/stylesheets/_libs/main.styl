.view_more
  padding-top: 30px
  padding-bottom: 2px
  position: relative
  display: inline-block
  margin-top: 60px
  font-family: AcuminBd
  font-size: 20px
  margin-bottom: 60px
  color: $gray-lightest
  &.link
    margin-top: 10px
    span
      font-size: 22px
      color: #fff
    &:before,
    &:after
      content: ""
      display: block
      width: 100%
      height: 2px
      background-color: #3C3C3C
      position: absolute
      top: 60px
      transition: all 0.3s
    &:after
      background: #9E9E9E
      transform: scale3d(0, 1, 1)
      transform-origin: 0% 50%
      transition: transform 0.3s
    &:hover:after
      transform: scale3d(1, 1, 1)
  &:before,
  &:after
    content: ""
    display: block
    width: 100%
    height: 2px
    background-color: #3C3C3C
    position: absolute
    top: 44px
    transition: all 0.3s
  &:after
    background: $gray
    transform: scale3d(0, 1, 1)
    transform-origin: 0% 50%
    transition: transform 0.3s
  &:hover:after
    transform: scale3d(1, 1, 1)

