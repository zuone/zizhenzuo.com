          font-weight: 600
          font-size: 18px
          display: block
          width: fit-content
          border-radius: 4px
          transition: all 0.3s ease
          &:not(:last-child)
            margin-bottom: 24px
      .case_logo
        height: 48px
        margin-bottom: 24px
      .case_desc
        line-height: 36px
        margin-bottom: 50px
        font-weight: 500
      .case_right
        position: relative
      .case_left
        position: relative
        max-width 660px
        z-index 10
      .case_cover
        position: absolute
        transform: translateY(-50%)
        top 50%
        left 0
        img
          border-radius: 4px
          width: 100%
          cursor pointer
          @extend $Transition-Normal
          &:hover
            opacity .9
