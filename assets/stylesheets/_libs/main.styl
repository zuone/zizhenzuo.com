// Nav
.top_nav
  position: fixed
  width: calc(100% - 128px)
  padding: 48px 0
  z-index: 10
  transform: translateX(-50%)
  left: 50%
  display: flex
  align-items: center
  transition: top 0.2s ease-out;
  top: 0

  &.nav-up
    top: -120px;

  .nav_link
    font-size: $h4
    color: $gray-light
    font-family: BitterR
    line-height: 30px
    transition: color 0.3s
    z-index: 2
    margin-right: 36px
    position relative
    // &:after
    //   content: ''
    //   position: absolute
    //   background-color: $gray
    //   z-index: -1
    //   bottom: 0
    //   left: -7.5%
    //   width: 115%
    //   height: 50%
    //   opacity: 0.3
    //   transform: scale3d(0, 1, 1)
    //   transform-origin: 0% 50%
    //   transition: transform 0.5s
    //   transition-timing-function: cubic-bezier(0.2, 1, 0.3, 1)
    // &:hover:after,
    // &.active:after
    //   transform: scale3d(1, 1, 1)

    &.active
      color: $gray

  .logo_z
    display: inline-block
    position: relative
    width: 40px
    height: 40px
    border-radius: 100%
    transition: all 0.3s
    z-index: 10

    &.right
      position: absolute
      right: 0

    i
      position: absolute
      -webkit-transform: translate(-50%, -50%)
      transform: translate(-50%, -50%)
      top: 50%
      left: 50%
      display: block
      background-color: $gray-dark
      background-image: none
      width: 22px
      height: 26px
      background-size: 20px 20px
      -webkit-mask-image: url("../images/logo/z.svg")
      mask-image: url("../images/logo/z.svg")
      transition: all 0.3s

    &:hover i
      opacity: .8

@media only screen and (max-width: 1140px)
