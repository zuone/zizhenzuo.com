          @extend $Y-Center
          position: absolute;
          left: -200px;
  &.about3
    background-color: #FFFFFF
    .content
      .desc
        padding-bottom: 60px
  &.about4
    background-color: #FBFBFB
    .content
      display: grid
      grid-template-columns: 0.4fr 1fr
      grid-column-gap: 150px
      p
        line-height: 60px
      .title_item
        position: relative
        .desc_title
          position absolute
          transform: translateY(-50%);
          top: 50%;
  &.title_split
    .content
      padding: 300px 120px;
  &.home_about
    .content
      padding: 140px 120px 0 120px
      display: grid
      grid-template-columns: 1fr 2.3fr
      grid-column-gap: 40px
      grid-row-gap: 40px
      .desc
        padding: 60px 30px
  &.dribbble
    background-color: #FBFBFB
  &.ins
    background-color: #fff
    .content
      padding: 200px 110px;
    .section_title
      margin-top: 10px
  &.more
    background-color: #FBFBFB
    position relative
    .content
      height 100vh
      .section_item
        @extend $XY-Center
        position: absolute
        display: grid
        grid-template-columns: 1fr 1fr
        grid-column-gap: 300px
        .img_qr
          width: 140px
          box-shadow: 0px 5px 60px rgba(0, 0, 0, 0.1), 0px 5px 20px rgba(0, 0, 0, 0.1);
          margin-bottom: 60px
        .item
          @extend $Y-Center
          position absolute

    .copyright
      @extend $X-Center
      font-family: AcuminR
      font-size: 14px
      color: #BDBDBD
      position: absolute
      bottom: 30px
      width: fit-content
    .item_title
      font-weight: 400
      font-size: 20px
      color: #6f6f6f
    .contact_item .item_desc
      font-family: AcuminBd
      font-size: 24px
      color: $gray-dark
    .contact_item a:before
      background-color: #e7e7e7
    .contact_item a:after
      background-color: #b6b6b6
    .contact_item:last-child
      margin-bottom: 0
  &.cases
    .content
      display: grid
      grid-column-gap: 150px
      overflow hidden
      height: 100vh;
      margin: 0 auto
      font-size: 18px
      color: #A0A0A0
      position relative
      .case_about
        position: absolute
        @extend $Y-Center
        .case_title
          font-family: AcuminBd
          font-size: 45px
          z-index: 2
          margin-bottom: 20px
        .case_info
          font-family: AcuminR
          font-size: 20px
          margin-bottom: 24px
        .case_button
          padding: 14px 36px
          font-weight: 600
          font-size: 18px
          display: block
          width: fit-content
          border-radius: 4px
          transition: all 0.3s ease
          &:not(:last-child)
            margin-bottom: 24px
      .case_logo
        height: 48px
        margin-bottom: 24px
      .case_desc
        line-height: 36px
        margin-bottom: 50px
      .case_right
        position: relative
      .case_left
        position: relative
        max-width 660px
        z-index 10
      .case_cover
        position: absolute
        transform: translateY(-50%)
        top 50%
        left 0
        img
          border-radius: 2px
          width: 100%

